{
  "include": ["./*.js", "./src/"],
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "target": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true
  }
}
